<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_view_relative"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_48dp"
    android:background="@color/light_blue"
    android:orientation="horizontal"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/header_center_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/uhf_read_write"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/header_model_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:text="[ ... ]"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_inv_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/dark_blue"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/im_recycle"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/settings_button_selector"
        android:src="@drawable/recycle"></ImageView>

    <ImageView
        android:id="@+id/im_actionbar_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/settings_button_selector"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings" />

</LinearLayout>